<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/settingsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/hostButton"
        android:layout_alignParentRight="true"
        android:layout_marginRight="61dp"
        android:text="Settings" />

    <Button
        android:id="@+id/hostButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="121dp"
        android:text="Host mode" />

    <Button
        android:id="@+id/partyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hostButton"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/settingsButton"
        android:layout_marginTop="24dp"
        android:text="Search party" />

    <TextView
        android:id="@+id/googleId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/hostButton"
        android:layout_marginBottom="132dp"
        android:text="Google id:"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
</RelativeLayout>
